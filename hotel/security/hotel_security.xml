<?xml version="1.0" encoding="utf-8" ?>
<!DOCTYPE xml>
<odoo noupdate="1">
    <!--Group for hotel user -->
    <record id="hotel_category" model="ir.module.category">
        <field name="name">field_value</field>
        <field name="sequence">45</field>

    </record>

    <record id="group_hotel_user" model="res.groups">
        <field name="name">Hotel Management / User</field>
        <field name="category_id" ref="hotel_category" />
        <field eval="[(4, ref('base.user_root'))]" name="implied_ids" />
    </record>
    <!--Group for hotel manager -->
    <record id="group_hotel_manager" model="res.groups">
        <field name="name">Hotel Management/ Manager</field>
        <field eval="[(4, ref('hotel.group_hotel_user'))]" name="implied_ids" />
        <field name="category_id" ref="hotel_category" />
        <field
            name="users"
            eval="[(4, ref('base.user_root')), (4, ref('base.user_admin'))]"
        />
    </record>

    <!-- <record id="group_hotel_receptionist" model="res.groups">
        <field name="name">Recepcionista</field>
        <field name="category_id" ref="hotel_category"/>
        <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
    </record> -->

</odoo>
