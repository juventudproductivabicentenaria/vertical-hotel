<?xml version="1.0" encoding="utf-8" ?>
<!DOCTYPE xml>
<odoo noupdate="0">
    <!--Group for hotel user -->
    <record id="hotel_category" model="ir.module.category">
        <field name="name">Hostal</field>
        <field name="sequence">45</field>

    </record>

    <record id="group_hotel_user" model="res.groups">
        <field name="name">Supervisor</field>
        <field name="category_id" ref="hotel_category" />
        <field name="implied_ids" eval="[(4, ref('base.user_root'))]" />
    </record>

    <!--Group for hotel manager -->
    <record id="group_hotel_manager" model="res.groups">
        <field name="name">Administrador</field>
        <field name="implied_ids" eval="[(4, ref('hotel.group_hotel_user'))]"  />
        <field name="category_id" ref="hotel_category" />
        <field
            name="users"
            eval="[(4, ref('base.user_root')), (4, ref('base.user_admin'))]"
        />
    </record>

    <record id="group_hotel_receptionist" model="res.groups">
        <field name="name">Usuario</field>
        <field name="category_id" ref="hotel_category"/>
        <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
    </record>


</odoo>
