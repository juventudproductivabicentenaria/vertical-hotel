<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <data>
        <record id="view_hotel_clean_type_tree" model="ir.ui.view">
            <field name="name">hotel.clean.type.tree</field>
            <field name="model">clean.type</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name" />
                    <field name="active" />
                    <field name="clean_activity_line_ids" 
                    widget="many2many_tags"
                     />
                </tree>
            </field>
        </record>

        <record id="view_hotel_clean_type_form" model="ir.ui.view">
            <field name="name">hotel.clean.type.form</field>
            <field name="model">clean.type</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="name" />
                            <!-- <field name="code" /> -->
                        </group>
                        <notebook>
                            <page  string="Actividades">
                                <field name="clean_activity_line_ids" >
                                    <tree  editable="bottom">
                                        <!-- <field name="name" /> -->
                                        <field name="activity_id" />
                                        <field name="clean_type_id" readonly="1" />
                                    </tree>
                                </field>
                            </page>
                        
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="action_hotel_clean_type" model="ir.actions.act_window">
            <field name="name">Tipos de actividades</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">clean.type</field>
            <field name="view_mode">tree,form</field>
        </record>

        
        <menuitem id="menu_hotel_clean_type"
            name="Tipos de actividades"
            parent="hotel_housekeeping.menu_hotel_activity"
            action="action_hotel_clean_type"
            sequence="10"
        />

        <record id="view_hotel_clean_activity_line_tree" model="ir.ui.view">
            <field name="name">hotel.clean.activity.line.tree</field>
            <field name="model">clean.activity.line</field>
            <field name="arch" type="xml">
                <tree>
                    <!-- <field name="name" /> -->
                    <field name="activity_id" />
                    <field name="clean_type_id" />
                </tree>
            </field>
        </record>

        <record id="view_hotel_clean_activity_line_form" model="ir.ui.view">
            <field name="name">hotel.clean.activity.line.form</field>
            <field name="model">clean.activity.line</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <!-- <field name="name" /> -->
                            <field name="clean_type_id" readonly="1" />
                            <field name="activity_id"/>
                           
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="action_hotel_clean_activity_line" model="ir.actions.act_window">
            <field name="name">Limpieza de actividades</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">clean.activity.line</field>
            <field name="view_mode">tree,form</field>
        </record>
        
    </data>
</odoo>
