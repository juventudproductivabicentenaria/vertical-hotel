<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <!-- ======= Housekeeping ======= -->
    <!-- Form view of hotel housekeeping -->
    <record id="view_hotel_housekeeping_form" model="ir.ui.view">
        <field name="name">hotel.housekeeping.form</field>
        <field name="model">hotel.housekeeping</field>
        <field name="arch" type="xml">
            <form string="Housekeeping">
                <header>
                    <button string="Verificar actividades" name="verify_all_activitys" aria-label="Clean"
                            title="Verificar actividades" states="inspect,in_process" type="object"
                            groups="hotel.group_hotel_user"
                            confirm="Tenga en cuenta que marcara todas las actividades como verificadas y marcara como realizado, confirme para realizar"
                            class="btn btn-primary">
                        <i class="fa fa-paint-brush"></i>
                    </button>
                    <button string="Marcar como realizado" name="verify_activitys" aria-label="Clean"
                            title="Marcar como realizado" states="inspect,in_process" type="object"
                            groups="hotel.group_hotel_user"
                            confirm="Se marcaran como no verificadas todas las atividades que no fueron verificadas, confirme para realizar"
                            class="btn btn-primary">
                        <i class="fa fa-paint-brush"></i>
                    </button>
                    <button string="Restablecer a borrador" name="action_set_to_draft"
                            title="restrablecer a borrador"
                            states="cancel,done" type="object"
                            class="btn btn-primary">
                        <i class="fa-pencil-square-o"></i>
                    </button>
                    <button string="Cancelar actividades" name="cancel_activitys"
                            aria-label="Cancel" title="Cancel"
                            groups="hotel.group_hotel_user"
                            confirm="Cancelara la el registro y cancelara todas las actividades, confirme para realizar"
                            states="inspect,in_process" type="object"
                            class="btn btn-primary">
                    </button>

                    <!-- <button string="Cancelar" name="cancel_action"
                            groups="hotel.group_hotel_user"
                            aria-label="cancel" title="Cancelar"
                            attrs="{'invisible':[('state','!=','cancel')]}" 
                            type="object" class="btn btn-primary">
                    </button> -->
                    <field name="state" widget="statusbar"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1><field name="code"/></h1>
                    </div>
                    <group>
                        <group>
                            <field name="current_date" attrs="{'readonly':[('state','in',['cancel','done'])]}"/>
                            <field name="clean_type" attrs="{'readonly':[('state','in',['cancel','done'])]}"/>
                            <field name="room_id" required="1" attrs="{'readonly':[('state','in',['cancel','done'])]}"  />
                        </group>
                        <group>
                            <field name="inspector_id" attrs="{'readonly':[('state','in',['cancel','done'])]}" required="1"/>
                            <field name="inspect_date_time" attrs="{'readonly':[('state','in',['cancel','done'])]}" required="1"/>
                            <field name="quality"
                                   attrs="{'invisible':[('state','not in',['clean','done'])]}"/>
                        </group>
                    </group>
                    <newline/>
                    <newline/>
                    <separator string="Activity Lines" colspan="4"/>
                    <field name="activity_line_ids" attrs="{'readonly':[('state','in',['cancel','done'])]}"
                           context="{'room_id':room_id, 'today_date':current_date}"
                           colspan="4" nolabel="1">
                        <form string="Activity Lines">
                            <group colspan="4" col="4">
                                <field name="today_date"/>
                                <field name="activity_id"/>
                                <field name="user_id"/>
                                <field name="clean_start_time"/>
                                <field name="clean_end_time"/>
                            </group>
                            <div class="oe_title">
                                <div class="oe_edit_only">
                                     <field name="done_activity"/>
                                    <label for="done_activity" string="Realizada?" readonly="1" force_save="1"/>
                                    <!--<field name="no_done_activity"/>
                                    <label for="no_done_activity" string="No realizada?" /> -->
                                </div>
                            </div>
                        </form>
                        <tree editable="buttom">
                            <field name="activity_id"  attrs="{'readonly':[('state','in',['done','cancel'])]}"/>
                            <field name="user_id"/>
                            <field name="today_date"/>  
                            <field name="clean_start_time"/>
                            <field name="clean_end_time"/>
                            <field name="parent_state" invisible="1"/>
                            <field name="done_activity"  readonly="1" force_save="1"/>
                            <!-- <field name="no_done_activity"  attrs="{'readonly':['|',('done_activity','=',True), ('state','in',['done','cancel'])]}"/> -->
                            <field name="state"  readonly="1"/>
                            <button name="doneActivity" type="object" string="Marcar como realizada" icon="fa-check-circle-o" icon_only="1"
                                title="Marcar como realizada"
                                attrs="{'invisible':['|',
                                    ('state','in',['verify','cancel', 'not_verify']),
                                    ('done_activity','!=',False)
                                    ]}" class="oe_stat_button" >
                                </button>
                            <button name="canceldoneActivity" type="object" string="Marcar como  no realizada" icon="fa-times-circle-o" icon_only="1"
                                title="Marcar como  no realizada"
                                attrs="{'invisible':['|',
                                    ('state','in',['verify','cancel','not_verify']),
                                    ('done_activity','!=',True)
                                ]}" class="oe_stat_button" >
                            </button>
                            <button name="verifyActivity" type="object" string="Verificar" 
                                title="Verificar"
                                groups="hotel.group_hotel_user"
                                attrs="{'invisible':['|',('parent_state','not in',['done','cancel']),('state','in',['cancel','verify','not_verify'])]}" class="oe_highlight">
                            </button>
                            <button name="cancelActivity" type="object" string="Cancelar" 
                                title="Cancelar"
                                groups="hotel.group_hotel_user"
                                attrs="{'invisible':['|',('parent_state','not in',['done','cancel']),('state','!=','draft')]}" class="oe_highlight" >
                            </button>
                            <button name="draftActivity" type="object" string="Restablecer a borrador" 
                                title="Restablecer a borrador"
                                groups="hotel.group_hotel_user"
                                attrs="{'invisible':['|',('parent_state','in',['done','cancel']),('state','not in',('cancel','verify','not_verify'))]}" class="oe_highlight" >
                            </button>
                        </tree>
                    </field>
                    <newline/>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Tree view of hotel housekeeping -->
    <record id="view_hotel_housekeeping_tree" model="ir.ui.view">
        <field name="name">hotel.housekeeping.tree</field>
        <field name="model">hotel.housekeeping</field>
        <field name="arch" type="xml">
            <tree>
                <field name="code"/>
                <field name="current_date"/>
                <field name="clean_type"/>
                <field name="room_id"/>
                <field name="inspector_id"/>
                <field name="inspect_date_time"/>
                <field name="state"/>
            </tree>
        </field>
    </record>

    <!-- Search view of hotel housekeeping -->
    <record id="view_hotel_housekeeping_search" model="ir.ui.view">
        <field name="name">hotel.housekeeping.search</field>
        <field name="model">hotel.housekeeping</field>
        <field name="arch" type="xml">
            <search string="Housekeeping">
                <group string='Filters'>
                    <filter domain="[('state','=','in_process')]" string="En Proceso"
                            name="in_process"/>
                    <filter domain="[('state','=','clean')]" string="Clean"
                            name="clean"/>
                    <filter domain="[('state','=','inspect')]" string="Inspect"
                            name="inspect"/>
                    <filter domain="[('state','=','cancel')]" string="Cancel"
                            name="cancel"/>
                    <filter domain="[('state','=','done')]" string="Done"
                            name="done"/>
                </group>
                <field name="inspector_id"/>
                <field name="quality"/>
                <field name="state"/>
                <newline/>
                <group expand="0" string="Group By">
                    <filter name="inspector_id" string="Inspector Name"
                            icon="terp-personal"
                            domain="[]" context="{'group_by':'inspector_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Action for hotel housekeeping -->
    <record id="open_hotel_housekeeping_form_tree"
            model="ir.actions.act_window">
        <field name="name">Housekeeping Services</field>
        <field name="res_model">hotel.housekeeping</field>
        <field name="binding_view_types">form</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="view_hotel_housekeeping_tree"/>
    </record>
<!--
    <menuitem id="menu_housekeeping" name="Housekeeping Services"
              parent="hotel.hotel_management_menu" sequence="3"/>
-->
    <menuitem name="Actividades"
              id="menu_open_hotel_housekeeping"
              parent="hotel.hotel_management_menu"
              sequence="3"/>

    <menuitem name="Registro de actividades"
              id="menu_open_hotel_housekeeping_form_tree"
              action="open_hotel_housekeeping_form_tree"
              parent="menu_open_hotel_housekeeping"
              sequence="3"/>

    <!-- ================ Activity Category================= -->
    <!-- Form view of hotel housekeeping activity type -->
    <record id="view_hotel_housekeeping_activity_type_form" model="ir.ui.view">
        <field name="name">hotel_housekeeping_activity_type_form</field>
        <field name="model">hotel.housekeeping.activity.type</field>
        <field name="arch" type="xml">
            <form string="Housekeeping Activity Types">
                <sheet>
                    <group>
                        <field name="name" string="Activity Name"/>
                        <field name="activity_id"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Tree view of hotel housekeeping activity type -->
    <record id="view_hotel_housekeeping_activity_type_list" model="ir.ui.view">
        <field name="name">hotel_housekeeping_activity_type_list</field>
        <field name="model">hotel.housekeeping.activity.type</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
            </tree>
        </field>
    </record>

    <!-- Action of hotel housekeeping activity type -->
    <record id="action_hotel_housekeeping_activity_type_view_form"
            model="ir.actions.act_window">
        <field name="name">Categorias de actividades</field>
        <field name="res_model">hotel.housekeeping.activity.type</field>
        <field name="binding_view_types">form</field>
        <field name="view_mode">tree,form</field>
    </record>
    <menuitem id="menu_hotel_activity" name="Activity"
              parent="hotel.hotel_configuration_menu" sequence="2"/>
    <menuitem id="menu_action_hotel_housekeeping_activity_type_view_form"
              name="Categorias de actividades"
              action="action_hotel_housekeeping_activity_type_view_form"
              parent="menu_hotel_activity" sequence="12"/>

    <!-- Activity -->
    <!-- Form view of hotel activity -->
    <record id="view_h_activity_form" model="ir.ui.view">
        <field name="name">hotel.activity.form</field>
        <field name="model">hotel.activity</field>
        <field name="arch" type="xml">
            <form string="Housekeeping Activity">
                <sheet>
                    <group>
                        <field name="name" string="Activity Name"/>
                        <field name="categ_id"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Search view of hotel activity -->
    <record id="view_h_activity_search" model="ir.ui.view">
        <field name="name">hotel.activity.search</field>
        <field name="model">hotel.activity</field>
        <field name="arch" type="xml">
            <search string="Housekeeping Activity">
                <field name="name"/>
                <field name="categ_id"/>
                <newline/>
                <group expand="0" string="Group By...">
                    <filter name="categ_id" string="Catagory"
                            icon="terp-stock_symbol-selection"
                            domain="[]" context="{'group_by':'categ_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Tree view of hotel activity -->
    <record id="view_h_activity_tree" model="ir.ui.view">
        <field name="name">hotel.activity.tree</field>
        <field name="model">hotel.activity</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="categ_id"/>
            </tree>
        </field>
    </record>

    <!-- Action of hotel activity -->
    <record id="action_h_activity_form" model="ir.actions.act_window">
        <field name="name">Activities</field>
        <field name="res_model">hotel.activity</field>
        <field name="binding_view_types">form</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{'default_isactivitytype':1}</field>
    </record>

    <menuitem id="menu_open_h_activity_form" name="Activities"
              action="action_h_activity_form" parent="menu_hotel_activity"/>

</odoo>
