<?xml version="1.0" encoding="utf-8" ?>
<odoo>


    <record id="view_hotel_reservation_form_inherited" model="ir.ui.view">
        <field name="name">hotel.reservation.form.inherited</field>
        <field name="model">hotel.reservation</field>
        <field name="inherit_id" ref="hotel_reservation.view_hotel_reservation_form"/>
        <field name="arch" type="xml">
            <xpath expr="//notebook]"
                   position="inside">
                <page name="hotel_restaurant" string="Hotel Restaurant">
                    <separator string="Restaurant Orders Details" colspan="4"/>
                    <field name="hotel_reservation_orders_ids" nolabel="1"
                           readonly="1">
                    </field>
                </page>
            </xpath>
        </field>
    </record>

</odoo>
