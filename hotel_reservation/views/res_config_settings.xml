<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="res_config_settings_form_inherit" model="ir.ui.view">
            <field name="name">hotel.reservation.res_config_settings.form</field>
            <field name="model">res.config.settings</field>
            <field name="inherit_id" ref="website.res_config_settings_view_form"/>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <xpath expr="//div[@data-key='website']//div[@id='webmaster_settings']//div[@id='google_maps_setting']"
                       position="after">
                    <div class="col-12 col-lg-6 o_setting_box" id="warehouse">
                        <div class="o_setting_right_pane">
                            <label for="warehouse_id"/>
                        </div>
                        <div class="o_setting_right_pane">
                            <field name="warehouse_id"/>
                            <div class="text-muted">
                                Hotel setup for website
                            </div>
                        </div>
                    </div>
                    <div class="col-12 col-lg-6 o_setting_box" id="pricelist_id">
                        <div class="o_setting_right_pane">
                            <label for="pricelist_id"/>
                        </div>
                        <div class="o_setting_right_pane">
                            <field name="pricelist_id"/>
                            <div class="text-muted">
                                Hotel setup for website
                            </div>
                        </div>
                    </div>
                </xpath>
            </field>
        </record>

        <record id="view_warehouse_form" model="ir.ui.view">
            <field name="name">view_warehouse.form</field>
            <field name="model">stock.warehouse</field>
            <field name="inherit_id" ref="stock.view_warehouse" />
            <field name="arch" type="xml">
                <xpath expr="//field[@name='code']" position="after">
                    <field name="tz"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
