<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="hotel_foods_view_tree" model="ir.ui.view">
        <field name="name">hotel.foods.tree</field>
        <field name="model">hotel.foods</field>
        <field name="arch" type="xml">
            <tree string="Foods">
                <field name="name"/>
                <field name="date_start"/>
                <field name="date_end"/>
                <field name="state"/>
            </tree>
        </field>
    </record>

    <record id="hotel_foods_view_form" model="ir.ui.view">
        <field name="name">hotel.foods.form</field>
        <field name="model">hotel.foods</field>
        <field name="arch" type="xml">
            <form string="Foods">
                <header>
                    <button name="action_set_to_draft" type="object" string="Restablecer a borrador"
                        attrs="{'invisible':[('state','!=','cancel')]}" class="oe_highlight">
                    </button>
                    <button name="action_set_cancel" type="object" string="Cancelar" 
                        attrs="{'invisible':[('state','!=','published')]}" class="oe_highlight">
                    </button>
                    <button name="action_set_to_publish" type="object" string="Publicar" 
                        attrs="{'invisible':[('state','!=','draft')]}" class="oe_highlight">
                    </button>
                    <field name="state" widget="statusbar"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="e.g. Laptop iBook"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="date_start"/>
                        </group>
                        <group>
                            <field name="date_end"/>
                        </group>
                        <field name="data" widget="image" filename="data"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    
    <record id="action_hotel_foods" model="ir.actions.act_window">
        <field name="name">Menu</field>
        <field name="res_model">hotel.foods</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem name="Menu" id="menu_action_hotel_foods" action="action_hotel_foods" parent="hotel.hotel_configuration_menu" sequence="100"/>

</odoo>
