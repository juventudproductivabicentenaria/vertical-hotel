<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="hotel_room_form_inherit" model="ir.ui.view">
            <field name="name">hotel_room_form_inherit</field>
            <field name="model">hotel.room</field>
            <field name="inherit_id" ref="hotel.view_hotel_room_form"/>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='isroom']" position="before">
                    <label for='isroom' string="Cambiar estado" attrs="{'invisible':[('is_deposit','=',True)]}"/>
                </xpath>    
                <xpath expr="//field[@name='isroom']" position="after">
                    <label for='is_deposit'></label>
                    <field name="is_deposit"/>
                    <field name="token" invisible="1"/>
                </xpath>
                <xpath expr="//field[@name='product_manager']" position="after">
                    <field name="clean_type_ids" widget="many2many_tags"/>
                </xpath>
                <xpath expr="//field[@name='isroom']" position="attributes">
                    <attribute name="attrs">{'invisible':[('is_deposit','=',True)]}</attribute>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
