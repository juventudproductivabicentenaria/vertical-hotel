<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <template
        id="assets_backend_"
        name="Quick Reservation Summary"
        inherit_id="web.assets_backend"
    >
        <xpath expr="." position="inside">
            <link
                rel="stylesheet"
                href="/hotel_reservation/static/src/css/room_summary.css"
            />
            <script
                type="text/javascript"
                src="/hotel_reservation/static/src/js/hotel_room_summary.js"
            />
        </xpath>
    </template>

    <template id="assets_frontend" inherit_id="website.assets_frontend" name="Website Reservation">
        <xpath expr="link[last()]" position="after">
            <link
                rel="stylesheet"
                type="text/scss"
                href="/hotel_reservation/static/src/scss/website.scss"
            />
        </xpath>
        <xpath expr="." position="inside">
            <script
                type="text/javascript"
                src="/hotel_reservation/static/src/js/hotel_reservation.js"
            />
        </xpath>
    </template>
