<?xml version="1.0" encoding="UTF-8"?>
<templates id="template_reservation" xml:space="preserve">

    <!-- Reservation search element -->
    <t t-name="hotel_reservation.number_rooms">
        <div id="number_rooms" class="row justify-content-around">
            <div class="row align-items-center">
                <label class="text_adult">Habitaciones</label>
                <button id="number_rooms_counter" data-type="increase" class="button_cantidad btn-sm" type="button">
                    <i class="fa fa-plus-circle fa-2x" ></i>
                </button>
                <label  class="text_adult mr-1 ml-1" id="result_rooms">0</label>
                <button id="number_rooms_counter" data-type="decrease" class="button_cantidad btn-sm" type="button">
                    <i class="fa fa-minus-circle fa-2x" ></i>
                </button>
            </div>
        </div>
    </t>

    <t t-name="hotel_reservation.error_data">
        <span id="error_data" class="w-auto text-black">
            <t t-esc="title"/>
        </span>
    </t>
    <t t-name="hotel_reservation.confirm_data">
        <span id="reservation_error" class="w-auto text-black">
            <h5 class="text-center mb-5"> 
                <t t-esc="content"/>
            </h5>
        </span>
    </t>

    <t t-name="hotel_reservation.add_other_person">
        <div class="m-4" id="add_other_person">
            <div class="row">
                <input id="identification_VAT_partner" type="text"
                    oninput="this.value = this.value.replace(/[^0-9]/g, '')" 
                    placeholder="Cédula de Identidad o RIF" 
                    class="form-control"/>
                <button type="button" id="searchRoommate" class="btn bottom-type-1 ml-3">Buscar</button>
            </div>
            <div class="seccion-superior-roomMate mt-3">
                <input size="40" id="first_last_name_roomMate_input" disabled="true" type="text" placeholder="Nombre y Apellido" class="form-control"></input>
                <input id="phone_input_roomMate" type="text" disabled="true" placeholder="Teléfono" class="form-control"></input>
                <input size="40" id="email_input_roomMate" disabled="true" type="text" placeholder="Correo Electrónico" class="form-control"></input>
            </div>
        </div>
       
    </t>

    <div t-name="hotel_reservation.search_reservation">
        <form
            id="search_reservation_form"
            class="form-inline register"
                action="/reservation"
                method="post"
                enctype="multipart/form-data"
                data-model_name="">
            <div class="container-fluid p-3" style="background-color: #dee2e6; border-radius: 50px;" id="main_container">
                <h2 class="text-center text-title-1 mb-5">SOLICITUD DE RESERVACIÓN</h2>
                <div class="row m-4">
                    <div class="w-25">
                        <label class="text-type-1 justify-content-start" for="request_date_from">Fecha Desde</label>
                        <input type="date" class="form-control " 
                            id="dateFrom" name="request_date_from" required="1" t-att-value="date_from"/>
                    </div>
                    <div class=" w-25">
                        <label class=" text-type-1 justify-content-start" for="request_date_to">Fecha Hasta</label>
                        <input type="date" class="form-control" 
                            id="date_until" name="request_date_until" required="1" t-att-value="date_until"/>
                    </div>
                    <div class=" w-25">
                        <label class=" text-type-1 justify-content-start" for="request_counterRooms">Habitaciones</label>
                        <!-- <input type="text" class="border rounded p-2" id="counterRooms" name="request_counterRooms"/> -->
                        <p id="counterRooms" class="text-type-1">0</p>
                    </div>
                    <!-- <div class="border bg-light ml-5" style="width: 500px; height: 50px;">
                        <p id="counterRooms" class="text-center" style="font-size:25px;">0 Habitaciones </p>
                    </div> -->
                </div>
                <br />
                <h2 class="text-center text-title-1 mb-3">DATOS DEL HUESPED</h2>
                <div class="m-4">
                    <!-- * Requerido -->
                    <div class="row">
                        <input id="identification_VAT" type="text"
                            oninput="this.value = this.value.replace(/[^0-9]/g, '')" 
                            placeholder="Cédula de Identidad o RIF" 
                            class="form-control"/>
                        <button type="button" id="searchPerson" class="btn bottom-type-1 ml-3">Buscar</button>
                    </div>
                    <div id="identification_user" class="row mt-3">
                        <input size="30" id="first_last_name_input" 
                            type="text" placeholder="Nombre y Apellido" class="form-control" disabled="true"/>
                        <input size="20" id="phone_input" 
                            type="text" placeholder="Teléfono" class="form-control" disabled="true"/>
                        <input size="30" id="email_input" 
                            type="text" placeholder="Correo Electrónico" class="form-control" disabled="true"/>
                        <input size="20" id="institution" 
                            type="text" placeholder="¿De qué institución nos visita?" class="form-control" disabled="true"/>
                    </div>
                </div>
                <div class="row m-4">
                    <div class="d-flex align-items-center w-25">
                        <label class=" mr-2 text-type-1" for="room_check">Incluir Habitación</label>
                        <input class="form-check-input " type="checkbox" id="room_check"/>
                    </div>
                    <div class="d-flex align-items-center w-25">
                        <label class=" mr-2 text-type-1" for="roomMate_check">Acompañante</label>
                        <input value="Acompañante" class="form-check-input" type="checkbox" id="roomMate_check"/>
                    </div>
                    <div class="d-flex align-items-center w-25">
                        <label class=" mr-2 text-type-1" for="children_check">Niños</label>
                        <input class="form-check-input" type="checkbox" id="children_check"/>
                    </div>
                </div>
                <div class="row" id="row_partner_div">
                    <div id="container_roomMate" class="container_roomMate_class "></div>
                </div>
                <div id="container_children" class="container_children_class m-4">

                </div>

                <!-- <p id="includeFood" class="text-start text-primary h5 fw-bold ml-4 mt-5">Acerca de la Comida</p> -->
                <div class="row m-4">
                    <div class="d-flex align-items-center w-25">
                        <label class=" mr-2 text-type-1" for="food_check">Incluir Comida</label>
                        <input value="Incluir Comida" class="form-check-input" type="checkbox" id="food_check"/>
                    </div>
                    <div class="d-flex align-items-center w-25">
                        <label class=" mr-2 text-type-1" for="transport_check">Requiere Transporte</label>
                        <input value="Incluir Transporte" class="form-check-input" type="checkbox" id="transport_check"/>
                    </div>
                </div>
                <div id="breakfast_container"> </div>
                <div class="d-flex align-items-center mb-2 mt-2" id="container_transport"></div>

                <div class="row justify-content-center">
                    <span id="error_data" class=""></span>
                </div> 
                <div class="row justify-content-center mt-3">
                    <button id="busqueda" type="button" class="btn bottom-type-1 mb-2 mr-sm-2" href="#">Realizar Reservación</button>
                    <button id="add_other_person" type="button" class="btn bottom-type-2 mb-2 mr-sm-2" href="#">Agregar otro(s) huesped(es)</button>
                </div>
                <div id="list_of_people" class="m-4">
                    <p id="par_list_persons" class="d-none text-center">
                        <strong>Lista de personas para la reservación</strong>
                    </p>
                        <ul id="list_ppl">
                            
                        </ul>
                </div>
                <div class="col-md-12 col-12">
                    <input type="hidden" id="evaluar_adults" value="0"/>
                    <input type="hidden" id="evaluar_ninos" value="0"/>
                    <input type="hidden" id="evaluar_rooms" value="0"/>
                    <input type="hidden" id="evaluar_breakfast" value="0"/>
                    <input type="hidden" id="evaluar_lunch" value="0"/>
                    <input type="hidden" id="evaluar_dinner" value="0"/>
                </div>
                <t t-call="hotel_reservation.image_menu_foods"/>
            </div>
        </form>
    </div>
    <t t-name="hotel_reservation.image_menu_foods">
        <div  id="image_menu_foods">
            <div class="row m-2">
                    <t t-if="image_data">
                        <img t-attf-src="#{image_data}"
                            alt="Menu Foods" 
                            style="width: 100%; height: auto;"
                        />
                    </t>
            </div>
        </div>
    </t>
</templates>