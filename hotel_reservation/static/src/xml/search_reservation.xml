<?xml version="1.0" encoding="UTF-8"?>
<templates id="template_reservation" xml:space="preserve">

    <!-- Reservation search element -->
    <t t-name="hotel_reservation.number_rooms">
        <div id="number_rooms" class="row justify-content-around">
            <div class="row align-items-center">
                <label class="text_adult">Habitaciones</label>
                <button id="number_rooms_counter" data-type="increase" class="button_cantidad btn-sm" type="button">
                    <i class="fa fa-plus-circle fa-2x" ></i>
                </button>
                <label  class="text_adult mr-1 ml-1" id="result_rooms">0</label>
                <button id="number_rooms_counter" data-type="decrease" class="button_cantidad btn-sm" type="button">
                    <i class="fa fa-minus-circle fa-2x" ></i>
                </button>
            </div>
        </div>
    </t>

    <t t-name="hotel_reservation.error_data">
        <span id="error_data" class="w-auto text-danger">
            <t t-esc="title"/>
        </span>
    </t>
    <div t-name="hotel_reservation.search_reservation">
        <form
            class="form-inline register"
                action="/reservation"
                method="post"
                enctype="multipart/form-data"
                data-model_name="">
            <div class="body-card-item p-3" style="width:1200px; height:950px;">
                <p class="text-start text-primary h4 fw-bold mb-5">Solicitud de Reservación</p>
                <div class="d-flex align-items-center mb-2 bg-white">
                    <div class="ml-2">
                        <label class="text_adult" for="request_date_from">Fecha Desde</label>
                        <input type="date" class="border rounded p-2" id="dateFrom" name="request_date_from" required="1" t-att-value="date_from"/>
                    </div>
                    <div class="ml-5">
                        <label class="text_adult" for="request_date_to">Fecha Hasta</label>
                        <input type="date" class="border rounded p-2" id="date_until" name="request_date_until" required="1" t-att-value="date_until"/>
                    </div>
                    <div class="border bg-light ml-5" style="width: 100px; height: 50px;">
                        <p id="counterPeople" class="text-center" style="font-size:30px;">0</p>
                    </div>
                      

                </div>
                <br />
                <div class="row">
                    <input id="identification_VAT" type="text" placeholder="Cédula de Identidad" class="form-control mt-3 ml-5"></input>
                    <button type="button" id="searchPerson" class="text-start text-primary h5 fw-bold mb-5 ml-4 mt-3">Buscar</button>
                    <div id="container_add" class="container">
                        <div class="seccion-superior">
                            <input size="40" id="first_last_name_input" type="text" placeholder="Nombre y Apellido" class="form-control ml-4" disabled="true"></input>
                            <input id="phone_input" type="text" placeholder="Teléfono" class="form-control" disabled="true"></input>
                        </div>
                        <div class="seccion-inferior mt-2">
                            <input size="40" id="email_input" type="text" placeholder="Correo Electrónico" class="form-control ml-4" disabled="true"></input>
                            <input size="30" type="text" placeholder="Institución donde nos visita" class="form-control" disabled="true"></input>
                        </div>
                    </div>
                </div>
                <br />
                
                <div class="">
                    
                    <p id="includeRoom" class="text-start text-primary h5 fw-bold ml-4 mt-3">Incluir Habitación</p>
                    <ul class="list-group mb-3 mt-3">
                        <li class="list-group-item d-flex align-items-center">
                            <label class="form-check-label mr-2" for="roomMate_check">Acompañante</label>
                            <input value="Acompañante" class="form-check-input" type="checkbox" id="roomMate_check"> </input>
                        </li>
                        <div id="container_roomMate" class="container_roomMate_class">
                        </div>
                        <li class="list-group-item d-flex align-items-center">
                            <label class="form-check-label mr-2" for="children_check">Niños</label>
                            <input class="form-check-input" type="checkbox" id="children_check"> </input>
                        </li>
                        <div id="container_children" class="container_children_class">
                        </div>
                    </ul>
                    
                </div>
                
                <div class="d-flex align-items-center mb-2">
                    <p id="includeFood" class="text-start text-primary h5 fw-bold mb-5 ml-4 mt-3">Incluir Comida</p>
                    <div class="border bg-light ml-3 mb-4 text-center" style="width: 100px; height: 30px;">
                        Desayuno
                    </div>
                    <div class="border bg-light ml-3 mb-4 text-center" style="width: 100px; height: 30px;">
                        Almuerzo
                    </div>
                    <div class="border bg-light ml-3 mb-4 text-center" style="width: 60px; height: 30px;">
                        Cena
                    </div>
                </div>
                <div class="d-flex align-items-center mb-2">
                    <p id="includeFood_one" class="text-start text-primary h5 fw-bold mb-5 ml-4 mt-3">Incluir Transporte</p>
                    <div class="border bg-light ml-3 mb-4 text-center" style="width: 100px; height: 30px;">
                        Origen
                    </div>
                    <div class="border bg-light ml-3 mb-4 text-center" style="width: 100px; height: 30px;">
                        Destino
                    </div>
                </div>
