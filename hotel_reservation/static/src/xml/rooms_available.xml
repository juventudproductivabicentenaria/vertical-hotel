<?xml version="1.0" encoding="UTF-8"?>
<templates id="template_rooms_available" xml:space="preserve">

    <!-- Room available -->
    <div t-name="hotel_reservation.rooms_available">
        <div id="rooms_available" class="text-center">
            <t t-if="room.length gt 0">
                <!-- <h6 class="text-success"> Recordatorio Las habitaciones seran asignadas por los encargados.</h6> -->
                <!-- <h1>Si hay habitaciones disponibles</h1> -->
                <div class="row row-space d-none" >
                    <div class="banner  col-sm-1 col-md-2">
                        <strong style="font-family:sans-serif; font-size: 1.7em; color:rgba(253, 0, 0, 0.452);;">Recordatorio:</strong>
                        <div class="text">
                            EL horario de entrada es de 04:00 pm hasta las 12:00 pm
                        </div>
                    </div>
                    <div class="col-sm-6 col-md-9 bd-css">
                        <table class="table table-hover customers">
                            <thead>
                            <tr style="font-size: 16px;">
                                <th>Habitación</th>
                                <th></th>
                                <th>Característica</th>
                                <th>Capacidad</th>
                                <th></th>
                                <th></th>
                            </tr>
                            </thead>
                            <tbody>
                            <t t-set="iterador" t-value="0"/>
                            <tr t-foreach="room" t-as="rooms">
                                <td><span t-esc="rooms.name"/></td>
                                <td><img t-if="rooms.image_1920" class="room-icon" t-attf-src="data:image/png;base64,#{rooms.image_1920}"/></td>
                                <td><span t-if="rooms.room_amenities" t-esc="rooms.room_amenities"/></td>
                                <td><span t-esc="rooms.capacity"/></td>
                                <td></td>
                                <td align="right"><input type="checkbox" class="form-check-input checkbox" checked="1" name="reserva" t-att-value="rooms.token"/></td>
                                <t t-set="iterador" t-value="iterador+1"/>
                            </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </t>
            <t t-else="">
                <h1>No hay habitaciones disponibles</h1>
            </t>
        </div>
    </div>

    <div class="error" t-name="hotel_reservation.status_error_show_msg">
        <span id="o_website_form_result" class="text-danger ml8">
            <i class="fa fa-close mr4" role="img" aria-label="Error" title="Error"/>An error has occured, the form has not been sent.<br/>
            <div class="row mb-4 alert alert-danger">
                <p><strong>Error message:</strong></p>
                <pre><t t-raw="responseText"/></pre>
            </div>
        </span>
    </div>
</templates>