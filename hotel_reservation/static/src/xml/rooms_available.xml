<?xml version="1.0" encoding="UTF-8"?>
<templates id="template_rooms_available" xml:space="preserve">

    <!-- Room available -->
    <div t-name="hotel_reservation.rooms_available">
        <div id="rooms_available" class="row">
            <t t-if="room.length gt 0">
                <table class="table table-hover customers">
                    <thead>
                    <tr style="font-size: 16px;">
                        <th>Habitación</th>
                        <th></th>
                        <th>Característica</th>
                        <th>Capacidad</th>
                        <th></th>
                        <th></th>
                    </tr>
                    </thead>
                    <tbody>
                    <t t-set="iterador" t-value="0"/>
                    <tr t-foreach="room" t-as="rooms">
                        <td><span t-esc="rooms.name"/></td>
                        <td><img t-if="rooms.image_1920" class="room-icon" t-attf-src="data:image/png;base64,#{rooms.image_1920}"/></td>
                        <td><span t-if="rooms.room_amenities" t-esc="rooms.room_amenities"/></td>
                        <td><span t-esc="rooms.capacity"/></td>
                        <td></td>
                        <td align="right"><input type="checkbox" class="form-check-input checkbox" name="reserva" t-att-value="rooms.id"/></td>
                        <t t-set="iterador" t-value="iterador+1"/>
                    </tr>
                    </tbody>
                </table>
            </t>
            <t t-else="">
                <h1>No hay habitaciones disponibles</h1>
            </t>
        </div>
    </div>
</templates>