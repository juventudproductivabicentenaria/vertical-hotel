<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <data>
        <template id="reservation" name="reservation">
            <t t-call="website.layout">
                <div id="reservation">
                    <div class="container pt-3">
                        <h1>Reservation</h1>
                        <div class="row">
                            <form
                                class="form-inline register"
                                action="/reservation"
                                method="post"
                                enctype="multipart/form-data"
                                data-model_name="">

                                <div class="row mb-2">
                                    <label class="col-form-label mb-2 mr-sm-2" for="request_date_from">Desde</label>
                                    <input type="date" class="form-control mb-2 mr-sm-2 border"
                                           id="dateFrom" name="request_date_from" required="1" value="2011-08-19"/>
                                    <label class="col-form-label mb-2 mr-sm-2" for="request_date_to">Hasta</label>
                                    <input type="date" class="form-control mb-2 mr-sm-2 border"
                                           id="date_until" name="request_date|_until" required="1"/>
                                    <div class="controls btn-group mb-2 mr-sm-2">
                                        <button type="button" class="btn btn-primary">
                                            <i class="fa fa-user"></i>
                                        </button>
                                        <button type="button" class="btn btn-primary dropdown-toggle dropdown-toggle-split"
                                                data-toggle="dropdown" href="#">
                                            <span class="caret"></span>
                                        </button>
                                        <div class="dropdown-menu">
                                            <span class="cantidad dropdown-item btn-group" href="#">
                                                <a class="text_adult mb-2 mr-sm-2" href="#">Adultos</a>
                                                <button id="incremento_adults" class="button_cantidad btn-sm mr-sm-2">
                                                    <i class="fa fa-plus-circle fa-2x"></i>
                                                </button>
                                                <p class="mr-sm-2" id="resultado_adults">0</p>
                                                <button id="desminuir_adults" class="button_cantidad btn-sm mr-sm-2">
                                                    <i class="fa fa-minus-circle fa-2x"></i>
                                                </button>
                                            </span>
                                            <span class="cantidad dropdown-item btn-group" href="#">
                                                <a class="text_adult mb-2 mr-sm-4"  href="#">Ni√±os</a>
                                                <button id="incremento_ninos" class="button_cantidad btn-sm mr-sm-2">
                                                    <i class="fa fa-plus-circle fa-2x"></i>
                                                </button>
                                                <p id="resultado_ninos" class="mr-sm-2">0</p>
                                                <button id="desminuir_ninos" class="button_cantidad btn-sm mr-sm-2">
                                                    <i class="fa fa-minus-circle fa-2x"></i>
                                                </button>
                                            </span>
                                        </div>
                                    </div>
                                    <button type="submit" class="btn btn-primary mb-2">Search</button>
                                </div>
                                <div class="col-md-12 col-12">
                                    <input type="hidden" id="evaluar_adults" value="0"/>
                                    <input type="hidden" id="evaluar_ninos" value="0"/>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </t>
        </template>
    </data>
</odoo>
