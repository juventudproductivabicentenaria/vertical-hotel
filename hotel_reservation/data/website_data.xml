<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="hotel_reservation" model="website.menu">
            <field name="name">Reservar</field>
            <field name="url">/reservation</field>
            <field name="parent_id">4</field>
            <field name="website_id" ref="website.default_website"/>
            <field name="sequence" type="int">15</field>
        </record>
        <record id="list_reserve" model="website.menu">
            <field name="name">Reservaciones</field>
            <field name="url">/reserve/list</field>
            <field name="parent_id">4</field>
            <field name="website_id" ref="website.default_website"/>
            <field name="sequence" type="int">16</field>
        </record>
        <template id="reserve_list_hotel" name="Link to frontend portal" inherit_id="portal.frontend_layout">
            <xpath expr="//a[@id='o_logout']" position="before">
                <a href="/reserve/list" role="menuitem" class="dropdown-item">Reservaciones</a>
            </xpath>
        </template>
    </data>
</odoo>
